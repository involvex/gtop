{
  "name": "@involvex/gtop",
  "version": "1.1.5",
  "description": "graphic top",
  "main": "./index.js",
  "bin": {
    "gtop": "bin/gtop"
  },
  "files": [
    "index.js",
    "lib/*/**"
  ],
  "scripts": {
    "test": "echo \"Test will be implemented.\" && exit 0",
    "start": "bun index.js",
    "dev": "bun index.js",
    "format": "prettier --single-quote --trailing-comma es5 --write 'lib/**/*.js'",
    "format:check": "prettier --check --single-quote --trailing-comma es5 'lib/**/*.js'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prebuild": "bun run format && bun run lint",
    "prepublishOnly": "marked-man --version $npm_package_version --manual 'Gtop Help' --section 1 ./CLI.md > gtop.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/involvex/gtop.git"
  },
  "keywords": [
    "system",
    "monitoring",
    "top",
    "chart",
    "monitor",
    "dashboard",
    "os"
  ],
  "author": "involvex",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/involvex/gtop/issues"
  },
  "homepage": "https://github.com/involvex/gtop#readme",
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "fkill": "^10.0.3",
    "systeminformation": "^5.30.7"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/fkill": "^6.0.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "marked-man": "^2.1.0",
    "prettier": "3.8.1"
  }
}
